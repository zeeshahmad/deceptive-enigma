<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="600" Height="600"
        x:Class="deceptive_enigma.MainWindow"
        Title="deceptive_enigma">
    
    <StackPanel Margin="11"> 
        <TextBlock>Welcome to Deceptive Enigma!</TextBlock>
        <TextBox Name="message" AcceptsReturn="True" TextWrapping="Wrap" Watermark="Message" MinHeight="100" />
        <TextBox Name="password" Watermark="Password" />
        <Button Name="encryptBtn" Click="EncryptClickHandler" Width="160">Encrypt</Button>
        <Button Name="decryptBtn" Click="DecryptClickHandler" Width="160">Decrypt</Button>
        <TextBox Name="encryptedMessage" AcceptsReturn="True" TextWrapping="Wrap" Watermark="Encrypted message" MinHeight="200" />
    </StackPanel>
</Window>
